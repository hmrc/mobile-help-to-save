{
  "type": "object",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "description": "Help to Save Goal events",
  "properties": {
    "events": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "set"
              },
              "amount": {
                "type": "number"
              },
              "date": {
                "type": "string"
              }
            }
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "delete"
              },
              "date": {
                "type": "string"
              }
            }
          }
        ]
      }
    }
  }
}